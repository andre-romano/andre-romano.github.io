{
    // TODO: Adicionar configuracoes do Sonarcloud aqui 
    // (VEJA README.MD DA PASTA .vscode PARA MAIS DETALHES)
    "git.ignoreLimitWarning": false,
    "python.defaultInterpreterPath": ".venv\\Scripts\\python.exe",
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "[python]": {
        "editor.formatOnSave": true, // formata codigo python ao salvar
        "editor.defaultFormatter": "ms-python.autopep8", // formatador python escolhido
        "editor.codeActionsOnSave": {
            "source.unusedImports": "explicit", // remove imports nao usados ao salvar documento
            "source.organizeImports.ruff": "explicit", // organiza imports ao salvar documento
        }
    },
    "autopep8.args": [
        "--ignore=E501",
        "--exclude=__pycache__,*.egg-info,venv/,.venv/,*.pyc",
    ],
    "cSpell.ignorePaths": [
        "**/*",
    ],
    "files.exclude": {
        "**/.coverage/**": true,
        "**/.coverage*/**": true,
        "**/.import_linter_cache/**": true,
        "**/.pytest_cache/**": true,
        "**/.pdm-python/**": true,
        "**/.pdm-build/**": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/node_modules/**": true,
        "**/Thumbs.db": true,
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.cache": true,
        "**/.pytest_cache": true,
        "**/.pdm-python": true,
        "**/.pdm-build": true,
        "**/.venv": true,
        "**/venv": true,
        "**/build": true,
        "**/dist": true,
        "**/htmlcov": true,
        "**/pdm.lock": true,
    },
}